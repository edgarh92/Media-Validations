{
    "Social Media Platforms": {
        "youtube_validation": {
            "filepath": "media_analysis.sh",
            "args": [
                "--yt",
                "shorts"
            ],
            "env": {
                "ARCHIVE": "archive"
            }
        },
        "instagram_validation": {
            "filepath": "media_analysis.sh",
            "args": [
                "--ig",
                "reels",
            ],
            "env": {
                "ARCHIVE": "archive"
            }
        },
        "tiktok_validation": {
            "filepath": "email-report.sh",
            "args": [
                "--tk",
                "videos",
            ],
            "env": {
                "ARCHIVE": "archive"
            }
        }
    }
}
